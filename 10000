local services = setmetatable({}, {__index = function(_, k) return game:GetService(k) end})
local ts = services.TweenService
local vu = services.VirtualUser
local run = services.RunService

-- æ«»èŠ±éœ“è™¹é…è‰²
local C = {
    Accent = Color3.fromRGB(255, 105, 180),
    BtnBG  = Color3.fromRGB(35, 25, 35),
    Text   = Color3.fromRGB(255, 255, 255),
    Stroke = Color3.fromRGB(255, 150, 200)
}

local function Tween(obj, info, prop)
    ts:Create(obj, TweenInfo.new(unpack(info)), prop):Play()
end

-- 1. å»ºç«‹ UI
local sg = Instance.new("ScreenGui", services.CoreGui)
sg.Name = "NekoClicker_WarningZone"

local Main = Instance.new("Frame", sg)
Main.Size = UDim2.new(0, 150, 0, 50)
Main.Position = UDim2.new(0.1, 0, 0.7, 0)
Main.BackgroundTransparency = 1 -- âœ¨ èƒŒæ™¯å…¨é€ï¼Œè®“æŒ‰éˆ•é£›èµ·ä¾†
Main.BorderSizePixel = 0
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 10)

local MainStroke = Instance.new("UIStroke", Main)
MainStroke.Thickness = 1.2
MainStroke.Color = C.Stroke
MainStroke.Transparency = 0.5
MainStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- 2. é€£é»æŒ‰éˆ•
local ClickBtn = Instance.new("TextButton", Main)
ClickBtn.Size = UDim2.new(0.9, 0, 0.8, 0)
ClickBtn.Position = UDim2.new(0.05, 0, 0.1, 0)
ClickBtn.BackgroundColor3 = C.BtnBG
ClickBtn.BackgroundTransparency = 0.2
ClickBtn.Text = "è­¦å‘Šæ¨¡å¼: OFF"
ClickBtn.TextColor3 = C.Text
ClickBtn.Font = Enum.Font.GothamBold
ClickBtn.TextSize = 12
Instance.new("UICorner", ClickBtn).CornerRadius = UDim.new(0, 8)

-- [[ ğŸš€ æ ¸å¿ƒé‚è¼¯ï¼šæ¯å¹€ 300 æ¬¡é»æ“Š ]]
_G.WarningClicker = false
local clickCount = 300 -- ç³»çµ±è­¦å‘Šå€æ•¸å€¼

ClickBtn.MouseButton1Click:Connect(function()
    _G.WarningClicker = not _G.WarningClicker
    
    if _G.WarningClicker then
        ClickBtn.Text = "âš¡ ç‹‚æš´è¼¸å‡ºä¸­ âš¡"
        Tween(ClickBtn, {0.2}, {BackgroundColor3 = Color3.fromRGB(255, 140, 0)}) -- è®Šæˆæ©˜è‰²è­¦å‘Šè‰²
        
        task.spawn(function()
            local cam = workspace.CurrentCamera
            while _G.WarningClicker do
                -- æ¯å¹€è§¸ç™¼ä¸€æ¬¡å¾ªç’°
                run.Heartbeat:Wait()
                
                -- ä¸€å¹€å…§ç‹‚é» 300 ä¸‹
                for i = 1, clickCount do
                    if not _G.WarningClicker then break end
                    vu:Button1Down(Vector2.new(0,0), cam.CFrame)
                    vu:Button1Up(Vector2.new(0,0), cam.CFrame)
                end
            end
        end)
    else
        ClickBtn.Text = "è­¦å‘Šæ¨¡å¼: OFF"
        Tween(ClickBtn, {0.3}, {BackgroundColor3 = C.BtnBG})
    end
end)

-- æ‹–æ‹½æ”¯æ´ (æ‰‹æ©Ÿå¿…å‚™)
local function AddDrag(obj)
    local dragging, dragStart, startPos
    obj.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true dragStart = input.Position startPos = obj.Position
        end
    end)
    services.UserInputService.InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            local delta = input.Position - dragStart
            obj.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    services.UserInputService.InputEnded:Connect(function() dragging = false end)
end
AddDrag(Main)

print("ğŸŒ¸ è­¦å‘Šå€é€£é»å™¨å•Ÿå‹•ï¼Œä¸»äººè«‹é–‹å§‹å¦³çš„è¡¨æ¼”å–µï¼")
